{
  "name": "dotnet-project",
  "version": "1.0.0",
  "private": true,
  "proxy": "http://localhost:5169",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.12.2",
    "framer-motion": "^12.23.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "scripts": {
    "start": "cd frontend && cross-env DANGEROUSLY_DISABLE_HOST_CHECK=true react-scripts start",
    "start:frontend": "npm run start",
    "start:backend": "dotnet run --project backend/backend.csproj",
    "start:dev": "npx concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build": "cd frontend && react-scripts build",
    "test": "cd frontend && react-scripts test",
    "eject": "cd frontend && react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

