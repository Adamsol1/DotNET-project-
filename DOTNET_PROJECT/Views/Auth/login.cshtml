@{
    Layout = null;
}

<!DOCTYPE html> 

    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewPort" content="width=device-width, initial-scale=1.0">
    <title>Log in</title>

        <link rel="stylesheet" href="~/css/LogInPage.css" />
       <!-- <script src="~/js/jquery.validate.js "></script>
        <script src="~/js/jquery.validate.unobtrusive.js"></script> -->
